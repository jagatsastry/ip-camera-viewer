<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Required for all MAS apps -->
    <key>com.apple.security.app-sandbox</key>
    <true/>

    <!-- Outgoing network: connect to IP cameras on local network -->
    <key>com.apple.security.network.client</key>
    <true/>

    <!-- Incoming network: embedded Express server listens on localhost -->
    <key>com.apple.security.network.server</key>
    <true/>

    <!-- File access: user can choose where to save recordings -->
    <key>com.apple.security.files.user-selected.read-write</key>
    <true/>

    <!-- Allow JIT for Electron/V8 -->
    <key>com.apple.security.cs.allow-jit</key>
    <true/>
</dict>
</plist>
